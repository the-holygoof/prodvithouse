{

  "name": "vithouse",

  "version": "1.0.0",

  "description": "A modern WordPress theme built with Tailwind CSS",

  "private": true,

  "scripts": {

    "watch": "tailwindcss -i ./src/style.css -o ./dist/style.css --watch",

    "serve": "live-server --port=5500 --watch=./ --ignore=./node_modules,./dist --open=index.html",

    "dev": "npm-run-all --parallel watch wpnow",

    "build": "tailwindcss -i ./src/style.css -o ./dist/style.css",

    "build:prod": "tailwindcss -i ./src/style.css -o ./dist/style.css --minify",

    "deploy": "./upload-theme-fixed.sh",

    "setup": "npm install && npm run build",

    "wpnow": "npx @wp-now/wp-now start"

  },

  "devDependencies": {

    "@tailwindcss/cli": "^4.1.15",

    "@tailwindcss/upgrade": "^4.1.14",

    "daisyui": "^5.3.7",

    "install": "^0.13.0",

    "npm": "^11.6.2",

    "npm-run-all": "^4.1.5",

    "prettier": "3.6.2",

    "prettier-plugin-tailwindcss": "^0.7.1",

    "tailwindcss": "^4.1.15"

  },

  "dependencies": {

    "@squircle/tailwindcss": "^1.0.6"

  }

}

